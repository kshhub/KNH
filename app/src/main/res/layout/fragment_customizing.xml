<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomizingFragment">


    <TextView
        android:id="@+id/textViewCustomizingMenu1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edgesmooth"
        android:backgroundTint="#ACD67B"
        android:gravity="center"
        android:text="Calendar Customizing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCustomizingSaturday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="토요일 파란색 표시" />

            <TextView
                android:id="@+id/textViewCustomizingSunday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="일요일 빨간색 표시" />

            <TextView
                android:id="@+id/textViewCustomizingToday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="오늘 강조" />

            <TextView
                android:id="@+id/textViewCustomizingDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="연도 정보" />

            <TextView
                android:id="@+id/textViewCustomizingFormat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="연도 타입" />

            <TextView
                android:id="@+id/textViewCustomizingColor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="달력 색상" />

            <TextView
                android:id="@+id/textViewCustomizingSelect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="선택 색상" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchCustomizingSaturday"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:checked="false"
                android:text="표시"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <Switch
                android:id="@+id/switchCustomizingSunday"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="표시"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <Switch
                android:id="@+id/switchCustomizingToday"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="켜기"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <Switch
                android:id="@+id/switchCustomizingDate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="켜기"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <Switch
                android:id="@+id/switchCustomizingFormat"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Year-Month\n(달력을 넘기면 적용)"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <Spinner
                android:id="@+id/spinnerCustomizingColor"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp" />

            <Spinner
                android:id="@+id/spinnerCustomizingSelect"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCustomizingMenu2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edgesmooth"
        android:backgroundTint="#ACD67B"
        android:gravity="center"
        android:text="Application Customizing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCustomizingBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edgesmooth"
                android:gravity="center"
                android:text="배경" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerCustomizingBackground"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>